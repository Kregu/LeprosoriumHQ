<h4>Post details:</h4>
<br>
<p>
<%= @post.content %>
<span style="font-size: 75%; color: 999"> Created: <%= @post.created_at %></span>
</p>
<br>


<h4>Comments:</h4>
<br>

<% @comment.each do |comment|%>
	<p>
		<%= comment.content %>
		<br>
		<br>
		<span style="font-size: 75%; color: 999"> Added at <%= comment.created_at %></span>
		<br>
		<br>

	</p>
	<hr>

<%end%>




<p>
	<form action="/details/<%= @post.id %>" method="POST" role="form">

	    <textarea name="comment[content]" class="form-control" id="exampleFormControlTextarea1" rows="6" placeholder="Type comment text here"></textarea>
		</br>
	 	<button type="submit" class="btn btn-primary">Add comment</button>

	</form>
</p>